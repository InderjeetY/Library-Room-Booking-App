<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
  <tr>
    <th>Room No</th>
    <th>Building</th>
    <th>From time</th>
    <th>To time</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% @user_bookings.each do |booking| %>
      <tr>
        <td><%= booking.room_no %></td>
        <td><%= booking.building %></td>
        <td><%= booking.from_time.in_time_zone("Eastern Time (US & Canada)") %></td>
        <td><%= booking.to_time.in_time_zone("Eastern Time (US & Canada)") %></td>
        <% if booking.from_time.in_time_zone("Eastern Time (US & Canada)") > DateTime.now %>
          <td><%= link_to 'Edit', {:controller => 'bookings', :action => 'edit_booking', :id => booking.id} %></td>
          <td><%= link_to 'Destroy', booking.id.to_s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

